{
  "name": "react-template",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "next": "next",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "npm run format:check && npm run lint && npm run test:all",
    "test:all": "npm run test:unit && npm run test:feature",
    "test:unit": "jest --config jest.config.unit.js --detectOpenHandles",
    "test:unit:update": "npm run test:unit -- --updateSnapshot",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:feature": "concurrently --names 'server,test' 'npm run dev -- --port 3001' 'wait-for-localhost 3001 && PORT=3001 npm run test:feature:noserver' --kill-others --success first",
    "test:feature:noserver": "jest --config jest.config.feature.js --detectOpenHandles",
    "test:feature:update": "concurrently --names 'server,test' 'npm run dev -- --port 3001' 'wait-for-localhost 3001 && PORT=3001 test:feature:noserver -- --updateSnapshot' --kill-others --success first",
    "test:feature:watch": "concurrently --names 'server,test' 'npm run dev -- --port 3001' 'wait-for-localhost 3001 && PORT=3001 test:feature:noserver -- --watch' --kill-others --success first",
    "lint": "eslint '**/**.{js,jsx,ts,tsx}'",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write '**/**'",
    "format:check": "prettier --check '**/**'"
  },
  "dependencies": {
    "next": "^9.1.1",
    "react": "^16.10.2",
    "react-dom": "^16.10.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.12",
    "@types/react": "^16.9.6",
    "@types/react-test-renderer": "^16.9.0",
    "@types/selenium-webdriver": "^4.0.3",
    "@types/styled-jsx": "^2.2.8",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "babel-core": "^6.26.3",
    "babel-jest": "^24.9.0",
    "chromedriver": "^77.0.0",
    "concurrently": "^5.0.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "geckodriver": "^1.18.0",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "jest-cucumber": "^2.0.11",
    "jest-date-mock": "^1.0.7",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "react-test-renderer": "^16.10.2",
    "selenium-webdriver": "^4.0.0-alpha.5",
    "styled-jsx": "^3.2.2",
    "typescript": "^3.6.4",
    "wait-for-localhost-cli": "^1.1.0",
    "yn": "^3.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
